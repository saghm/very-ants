#!/usr/bin/env ruby

require "bundler/setup"
require "very_ants"

puts "normal arithmetic"
puts
puts "14 + 6 = #{14 + 6}"
puts "14 - 6 = #{14 - 6}"
puts "14 * 6 = #{14 * 6}"
puts "14 / 6 = #{14 / 6}"
puts
puts "very ansty arithmetic (c = 4)"
Fixnum::set_c(4)
puts
puts "14 + 6 = #{14 + 6}"
puts "14 - 6 = #{14 - 6}"
puts "14 * 6 = #{14 * 6}"
puts "14 / 6 = #{14 / 6}"
